@model IEnumerable<TradeUnionManageSystem.BLL.Models.ModelWorker>

@{
    ViewBag.Title = "Index";
}

<div class="table-action-container">
    <div class="btn-group">
        @Html.ActionLink("添加", "Create", null, new { type = "button", @class = "btn btn-default" })
        @Html.ActionLink("删除", "Delete", null, new { type = "button", @class = "btn btn-default" })
        @Html.ActionLink("打印", "Print", null, new { type = "button", @class = "btn btn-default" })
        @Html.ActionLink("导出", "Export", null, new { type = "button", @class = "btn btn-default" })
    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-primary" data-toggle="collapse"
                data-target="#advancedSearch">
            高级查询
        </button>
    </div>
</div>

<div id="advancedSearch" class="panel-collapse collapse">
    <div class="panel-body">
        <form role="form">
            <div class="row">
                <div class="col-lg-4 form-group">
                    <label for="name" class="col-sm-3 control-label">姓名</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="请输入姓名">
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    <label for="name" class="col-sm-3 control-label">性别</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option>男</option>
                            <option>女</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    <label for="name" class="col-sm-3 control-label">劳模类型</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 form-group">
                    <label for="name" class="col-sm-2 control-label">出生年月</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-sm-5">
                        <input type="date" class="form-control">
                    </div>
                </div>
                <div class="col-lg-6 form-group">
                    <label for="name" class="col-sm-2 control-label">荣获劳模日期</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-sm-5">
                        <input type="date" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 form-group">
                    <label for="name" class="col-sm-3 control-label">单位所属市区</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    <label for="name" class="col-sm-3 control-label">现（离退休）工作单位</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    <label for="name" class="col-sm-3 control-label">现（离退休）职务</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 form-group">
                    <label for="name" class="col-sm-3 control-label">就业状况</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <input id="btnSearch" type="submit" class="btn btn-default btn-block" value="查询" />
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            编辑
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkingUnitCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkingPositionCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelWorkderType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelWorkerLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryPerMonth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HaveAllowance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HaveMedicalTreatment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <input type="checkbox" />
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkingUnitCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkingPositionCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelWorkderType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelWorkerLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalaryPerMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherIncome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HaveAllowance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HaveMedicalTreatment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
