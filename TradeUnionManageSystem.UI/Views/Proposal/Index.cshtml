@model IEnumerable<TradeUnionManageSystem.BLL.Models.Proposal>

@{
    ViewBag.Title = "Index";
}


<div class="table-action-container">
    <div class="btn-group">
        @Html.ActionLink("添加", "Create", null, new { type = "button", @class = "btn btn-default" })
        @Html.ActionLink("删除", "Delete", null, new { type = "button", @class = "btn btn-default" })
        @Html.ActionLink("打印", "Print", null, new { type = "button", @class = "btn btn-default" })
        @Html.ActionLink("导出", "Export", null, new { type = "button", @class = "btn btn-default" })
    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-primary" data-toggle="collapse"
                data-target="#advancedSearch">
            高级查询
        </button>
    </div>
</div>

<div id="advancedSearch" class="panel-collapse collapse">
    <div class="panel-body">
        <form role="form">
            <div class="row">
                <div class="col-lg-6 form-group">
                    <label for="name" class="col-sm-3 control-label">提案类型</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6 form-group">
                    <label for="name" class="col-sm-3 control-label">提案人</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="请输入提案人">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 form-group">
                    <label for="name" class="col-sm-2 control-label">提案提交日期</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-sm-5">
                        <input type="date" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <input id="btnSearch" type="submit" class="btn btn-default btn-block" value="查询" />
                </div>
            </div>
        </form>
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProposalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProposalEmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProposalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProposalDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProposalDealStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProposalType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProposalEmployeeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProposalDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProposalDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProposalDealStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
