@model IEnumerable<TradeUnionManageSystem.UI.Models.DisplayModel.HonorDisplayModel>

<div class="tableContainer">

    <input id="currentPage" type="hidden" value="@ViewData["currentPage"]" />
    <input id="totalPages" type="hidden" value="@ViewData["totalPages"]" />

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    编辑
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HonorTarget)
                </th>

                <th>@Html.DisplayNameFor(model => model.HonorEmployeeName)</th>
                <th>@Html.DisplayNameFor(model => model.HonorEmployeeGender)</th>
                <th>@Html.DisplayNameFor(model => model.HonorEmployeeBirthday)</th>
                <th>@Html.DisplayNameFor(model => model.HonorEmployeeWorkingPosition)</th>
                <th>@Html.DisplayNameFor(model => model.HonorEmployeeWorkingUnit)</th>
                <th>@Html.DisplayNameFor(model => model.HonorEmployeeWorkingGroup)</th>
                <th>@Html.DisplayNameFor(model => model.HonorName)</th>

                <th>
                    @Html.DisplayNameFor(model => model.HonorLevel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateTime)
                </th>


                <th class="hiddenTh">
                    @Html.DisplayNameFor(model => model.CreateDeptCode)
                </th>
                <th class="hiddenTh">
                    @Html.DisplayNameFor(model => model.EmployeeID)
                </th>
                <th class="hiddenTh">
                    @Html.DisplayNameFor(model => model.EmployeeJobCode)
                </th>
                <th class="hiddenTh">
                    @Html.DisplayNameFor(model => model.EmployeeUnitCode)
                </th>
                <th class="hiddenTh">
                    @Html.DisplayNameFor(model => model.EmployeeGroupCode)
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" />
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", new { id = item.ID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HonorTarget)
                </td>
                
                <td>@Html.DisplayFor(modelItem => item.HonorEmployeeName)</td>
                <td>@Html.DisplayFor(modelItem => item.HonorEmployeeGender)</td>
                <td>@Html.DisplayFor(modelItem => item.HonorEmployeeBirthday)</td>
                <td>@Html.DisplayFor(modelItem => item.HonorEmployeeWorkingPosition)</td>
                <td>@Html.DisplayFor(modelItem => item.HonorEmployeeWorkingUnit)</td>
                <td>@Html.DisplayFor(modelItem => item.HonorEmployeeWorkingGroup)</td>
                <td>@Html.DisplayFor(modelItem => item.HonorName)</td>

                <td>
                    @Html.DisplayFor(modelItem => item.HonorLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>

                @*<td>
                    @Html.DisplayFor(modelItem => item.CreateDeptCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeJobCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeUnitCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeGroupCode)
                </td>*@
            </tr>
        }
    </table>

</div>


